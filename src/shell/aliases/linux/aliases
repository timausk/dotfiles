# Shorter commands for Advanced Packaging Tool
alias apti='sudo apt install'
alias aptr='sudo apt remove'
alias aptuu='sudo apt update \
		  && sudo apt upgrade -y \
		  && sudo apt autoremove'



alias update_all='aptuu; update_nvm';


alias ll='ls -alh --color=auto'
alias ls='ls --color=auto'


# Open from the terminal.
alias o='xdg-open'

# Get local IP
alias l-ip='ifconfig \
                    | grep 'inet addr' \
                    | grep -v '127.0.0.1' \
                    | cut -d: -f2 \
                    | cut -d' ' -f1'
