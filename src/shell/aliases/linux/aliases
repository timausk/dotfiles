# Shorter commands for Advanced Packaging Tool
alias apti='sudo apt-get install'
alias aptr='sudo apt-get remove'
alias aptuu='sudo apt-get update \
		  && sudo apt-get upgrade -y \
		  && sudo apt-get autoremove'



alias update_all='aptuu';


alias ll='ls -alh --color=auto'
alias ls='ls --color=auto'


# Open from the terminal.
alias o='xdg-open'

# Get local IP
alias l-ip='ifconfig \
                    | grep 'inet addr' \
                    | grep -v '127.0.0.1' \
                    | cut -d: -f2 \
                    | cut -d' ' -f1'
