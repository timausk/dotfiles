# - - - - Easier navigation - - - - - - - - - - - - - - - - - - - - - - - - - -
#alias ..='cd ..'
#alias ...='cd ../..'
#alias ....='cd ../../..'

# go to a specific folder
alias rr='cd $HOME/Development'
alias dl='cd $HOME/Downloads'
alias dt='cd $HOME/Desktop'


# - - - - mv, rm, cp + helpful options - - - - - - - - - - - - - - - - - - - - -
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'


# - - - - Shortcuts - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
alias a='atom'
alias v='vim'
alias cl='clear'
alias uz='gunzip -k'


# Git helper
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gba='git branch -a'
alias gcam='git commit -a -m'
alias gc='git checkout'
alias gcb='git checkout -b'
alias gcm='git checkout master'
alias gcd='git checkout develop'
alias gdl='git branch -d'
alias gf='git fetch'
alias gh='git help'
alias gl='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'
alias gm='git merge'
alias gma='git merge --abort'
alias gpull='git pull origin $(git_current_branch)'
alias gpullr='gpull --rebase'
alias gpush='git push origin $(git_current_branch)'
alias gst='git status'
alias gundoc='git reset HEAD~'                     # Undo last local commit
alias gundop='git push -f origin HEAD^:master'     # Undo a git push


# Open (file) In Chrome/Firefox (from shell)
alias oic="o -a 'Google Chrome'"
alias oif="o -a 'Firefox'"

# open + edit widely used files
alias ez='vim ~/.zshrc'


# File size
alias fs="stat -f \"%z bytes\""


# Show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'


# Vagrant
alias vup='vagrant up'
alias vhalt='vagrant halt'
alias vkill='vagrant destroy'
alias v-v='vagrant -v'


# Copy SSH to clipboard
alias sshcopy='cat ~/.ssh/id_rsa.pub | pbcopy && echo "Copied pub ssh key to clipboard."'
